{% extends 'partials/base.html.twig' %}

{% set blog_image = page.media.images[theme.hero_header.image] %}

{% block body %}
<section id="body">

    <div id="hero-header" class="hero-header-{{ theme.hero_header.size }}" {% if theme.hero_header.color %}style="background-color:{{ theme.hero_header.color  }};"{% endif %}>

        <img id="hero-header-image" src="{{ blog_image.url }}" />
        <div class="hero-header-wrapper"></div>
        <div class="container wrapper grid-size">
            {% include 'partials/blog/title.html.twig' with {title_level: 'h1'} %}
            {% if theme.hero_header.date %}
            {% include 'partials/blog/date.html.twig' %}
            {% endif %}
            {% if theme.hero_header.taxonomy %}
            {% include 'partials/blog/taxonomy.html.twig' %}
            {% endif %}
        </div>
        {% if theme.hero_header.size == 'fullscreen' %}
            <div class="mouse-scroller"></div>
        {% endif %}
    </div>

    <div id="blog-body">
        <div class="container wrapper grid-size">
           <div class="columns">
                <div id="item" class="column col-8 col-md-12">
                    {% if config.plugins.breadcrumbs.enabled %}
                        {% include 'partials/breadcrumbs.html.twig' %}
                    {% endif %}
                    {% include 'partials/blog-item.html.twig' with {'blog':page.parent, 'truncate':false} %}
                </div>
                <div id="sidebar" class="column col-4 col-md-12">
                    {% include 'partials/sidebar.html.twig' with {'blog':page.parent}%}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
