{% extends 'partials/base.html.twig' %}

{% block hero_content %}
    {% if theme.blog.title == 'hero' %}
        {% include 'partials/blog/title.html.twig' with {title_level: 'h1'} %}
        {% if page.header.subtitle %}
            <h4>{{ page.header.subtitle }}</h4>
        {% endif %}
    {% endif %}
    {% if theme.blog.date == 'hero' %}
        {% include 'partials/blog/date.html.twig' %}
    {% endif %}
    {% if theme.blog.taxonomy == 'hero' %}
        {% include 'partials/blog/taxonomy.html.twig' %}
    {% endif %}
{% endblock %}

{% block content %}
    {% embed 'partials/blog/layout.html.twig' with {blog: page.parent} %}
        {% block item %}
            {% include 'partials/blog-item.html.twig' with {blog: page.parent} %}
        {% endblock %}
    {% endembed %}
{% endblock %}

